<table class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
    <th style="text-align: center">名称</th>
    <th style="text-align: center">App ID</th>
    <th style="text-align: center">描述</th>
    <th style="text-align: center">传感器ID</th>
    <th style="text-align: center">执行器ID</th>
	<th style="text-align: center">开关状态</th>
	<th style="text-align: center">删除</th>
  </tr>
</thead>
<tbody>
<% if @apps %>
<% @apps.each do |app| %>
	<tr>
		<td style="text-align: center"><%= app.name %></td>
		<td style="text-align: center"><%= app.id %></td>
		<td style="text-align: center"><%= app.description %></td>
		<td style="text-align: center"><%= app.sensor_id %></td>
		<td style="text-align: center"><%= app.actuator_id %></td>
		<td style="text-align: center"><input type="checkbox" name="my-checkbox" checked></td>
		<td style="text-align: center"><%= link_to 'Destroy', [current_user, app], method: :delete ,data: { confirm: 'Are you sure?' } %></td>
	</tr>
<% end %>
<% end %>
</tbody>
</table>
