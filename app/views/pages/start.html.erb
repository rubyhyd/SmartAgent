<!doctype html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <title>SmartAgent</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%= stylesheet_link_tag 'bootstrap' %>
  <%= stylesheet_link_tag 'smartagent' %>
  <%= stylesheet_link_tag 'sticky-footer-navbar' %>

</head>

<body>


<div id="wrap">
  <%= render "share/header" %>
  <div class="container">

    <div class="tabbable tabs-left">
      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#accountmanager" data-toggle="tab">账号管理</a>
        </li>
        <li>
          <a href="#operationrecord" data-toggle="tab">操作记录</a>
        </li>

      </ul>

      <div class="tab-content">
        <div class="tab-pane fade active in" id="accountmanager">
          <div class="col-md-6 col-md-offset-1">
            <form class="form-horizontal" role="form">

              <div class="form-group">
                <label for="exampleInputEmail1">
                  用户名<span class="glyphicon glyphicon-edit"></span>
                </label>
                <input type="email" class="form-control"
                       id="exampleInputEmail1" placeholder="cuida">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">
                  密码<span class="glyphicon glyphicon-edit"></span>
                </label>
                <input type="email" class="form-control"
                       id="exampleInputEmail1" placeholder="123456">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">
                  邮箱<span class="glyphicon glyphicon-edit"></span>
                </label>
                <input type="email" class="form-control"
                       id="exampleInputEmail1" placeholder="443021181@qq.com">
              </div>
            </form>

          </div>
        </div>
        <div class="tab-pane fade" id="operationrecord">
          <img src="img/u11.png"/>

        </div>

      </div>
    </div>
  </div>
</div>
<%= render "share/footer" %>


<script src="js/jquery.js"></script>

<script src="js/bootstrap.min.js"></script>
</body>
</html>